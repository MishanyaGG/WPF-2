<Window x:Class="Reshenie_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reshenie_2"
        mc:Ignorable="d"
        Title="Главное окно" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize" Loaded="Window_Loaded" Height="450" Width="800">
    <StackPanel Margin="5">
        <Button x:Name="button1" MinWidth="200" Margin="5"
                Content="Открыть подчиненное окно" Padding="5"
                Click="button1_Click"/>
        <Button x:Name="button2" Margin="5"
                Content="Открыть диалогове окно" Padding="5"
                Click="button2_Click"/>

    </StackPanel>
</Window>
